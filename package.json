{
  "name": "@alcalzone/esm2cjs",
  "publishConfig": {
    "access": "public"
  },
  "description": "Command line utility to compile a JS project from ES modules to CommonJS",
  "version": "1.2.0",
  "bin": "bin/esm2cjs.js",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "build/esm/index.d.ts",
  "typesVersions": {
    "*": {
      "build/esm/index.d.ts": [
        "build/esm/index.d.ts"
      ],
      "build/cjs/index.d.ts": [
        "build/esm/index.d.ts"
      ]
    }
  },
  "files": [
    "bin/",
    "build/**/*.{js,d.ts,map}"
  ],
  "repository": "https://github.com/AlCalzone/esm2cjs",
  "author": "Dominic Griesel <d.griesel@gmx.net>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "node -r esbuild-register .postbuild.ts",
    "test:reset": "jest --clear-cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "release": "release-script"
  },
  "dependencies": {
    "esbuild": "^0.24.0",
    "fs-extra": "^10.1.0",
    "tiny-glob": "^0.2.9",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "~3.5.9",
    "@alcalzone/release-script-plugin-license": "~3.5.9",
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@tsconfig/node14": "^1.0.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.7",
    "@types/node": "^14.18.24",
    "@types/yargs": "^17.0.11",
    "babel-jest": "^28.1.3",
    "esbuild-register": "^3.3.3",
    "jest": "^28.1.3",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
