{
  "name": "@alcalzone/esm2cjs",
  "publishConfig": {
    "access": "public"
  },
  "description": "Command line utility to compile a JS project from ES modules to CommonJS",
  "version": "1.4.1",
  "bin": "bin/esm2cjs.cjs",
  "type": "module",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "imports": {
    "#test3_dep": {
      "import": "./test/fixtures/esm/test3_dep_esm.js",
      "require": "./test/fixtures/cjs/test3_dep_cjs.js"
    }
  },
  "types": "build/esm/index.d.ts",
  "typesVersions": {
    "*": {
      "build/esm/index.d.ts": [
        "build/esm/index.d.ts"
      ],
      "build/cjs/index.d.ts": [
        "build/cjs/index.d.ts"
      ]
    }
  },
  "files": [
    "bin/",
    "build/**/*.{js,d.ts,map}",
    "build/**/package.json",
    "shims/"
  ],
  "repository": "https://github.com/AlCalzone/esm2cjs",
  "author": "Dominic Griesel <d.griesel@gmx.net>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsx .postbuild.mts",
    "test": "vitest",
    "release": "release-script"
  },
  "dependencies": {
    "esbuild": "^0.25.10",
    "tiny-glob": "^0.2.9",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "~4.0.0",
    "@alcalzone/release-script-plugin-license": "~4.0.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^18.19.129",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
